server {
    listen 443 ssl;
    server_name         bteak.42.fr;

    #cert info
    ssl_certificate     /etc/nginx/ssl/bteak.crt;
    ssl_certificate_key /etc/nginx/ssl/bteak.key;
    ssl_protocols TLSv1.2 TLSv1.3;

    root /usr/share/nginx/html;
    index index.html index.htm;

    server_name _;
    location / {
        try_files $uri $uri/ =404;
    }
}
